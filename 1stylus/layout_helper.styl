/* Base
-------------------------------------------------- */

.container
	// A container should group all your columns.
	width 950px
	margin 0 auto

.left
	float left

.right
	float right

.mla, .mlra
	margin-left auto !important

.mra, .mlra
	margin-right auto !important

.block
	display block

/* positions
-------------------------------------------------- */

.rel, .relative
	position relative

.abs, .absolute
	position absolute

.fix, .fixed
	position fixed

/* Layout bugs fix
-------------------------------------------------- */

.cover
	// same as add badboy child
	*zoom 1 // Fix bug for IE 6/7 only
	&:before
	&:after
		content " " // The space content is one way to avoid an Opera bug when the `contenteditable` attribute is included anywhere else in the document. Otherwise it causes space to appear at the top and bottom of elements that receive the `clearfix` class.
		display table // zedloos: The use of `table` rather than `block` is only necessary if using `:before` to contain the top-margins of child elements.
	&:after
		clear both

.badboy
	clear both
	display block
	width 0 !important
	height 0 !important
	min-height 0 !important
	min-width 0 !important
	margin 0 !important
	padding 0 !important
	overflow hidden

.zedloos
	padding-top 1px
	padding-bottom 1px

.overhide, .overhidden
	overflow hidden

.overscrl, .overscroll
	overflow scroll

.ir
	// Image replacement
	background-color transparent
	border 0
	overflow hidden
	/* IE 6/7 fallback */
	*text-indent: -9999px

.ir:before
	content ""
	display block
	width 0
	height 100%


/* Hidden
-------------------------------------------------- */

.hidden
	// Hide from both screenreaders and browsers
	display none !important
	visibility hidden

.visuallyhidden
	// Hide only visually, but have it available for screenreaders.
	border 0
	clip rect(0 0 0 0)
	height 1px
	margin -1px
	overflow hidden
	padding 0
	position absolute
	width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
	clip auto
	height auto
	margin 0
	overflow visible
	position static
	width auto

.invisible
	visibility hidde

/* Chrome Frame prompt
-------------------------------------------------- */

.chromeframe {
	margin: 0.2em 0;
	background: #ccc;
	color: #000;
	padding: 0.2em 0;
}

